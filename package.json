{
  "name": "@elonehoo/colors-convert",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Elone Hoo <huchengyea@163.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elonehoo/colors-convert"
  },
  "homepage": "https://github.com/elonehoo/colors-convert#readme",
  "bugs": "https://github.com/elonehoo/colors-convert/issues",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && vite build",
    "release": "bumpp package.json --commit --push --tag && pnpm -r publish --access public",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@elonehoo/eslint-config": "2.0.0",
    "@elonehoo/rimraf": "^0.0.1",
    "@elonehoo/vite-plugin-type-ts": "^0.0.1",
    "@types/node": "18.15.11",
    "@vitest/coverage-c8": "^0.30.1",
    "bumpp": "8.2.1",
    "c8": "^7.13.0",
    "eslint": "8.38.0",
    "pnpm": "7.32.0",
    "typescript": "5.0.4",
    "vite": "4.2.1",
    "vitest": "0.30.1"
  }
}
